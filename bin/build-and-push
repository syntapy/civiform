#! /bin/bash

set -e
set +x
export AWS_DEFAULT_REGION=us-west-2
REGION=us-west-2

aws ecr-public get-login-password --region us-east-1 | sudo docker login --username AWS --password-stdin public.ecr.aws/t1q6b4h2
sudo docker build -f prod.Dockerfile -t universal-application-tool --cache-from public.ecr.aws/t1q6b4h2/universal-application-tool:latest .
sudo docker tag universal-application-tool:latest public.ecr.aws/t1q6b4h2/universal-application-tool:latest
sudo docker push public.ecr.aws/t1q6b4h2/universal-application-tool:latest

ECSSERVICE=$(aws cloudformation describe-stacks --region ${REGION} --stack-name civiform | jq -r '.Stacks[0].Outputs[] | select(.OutputKey == "ECSService") | .OutputValue')
ECSCLUSTER=$(aws cloudformation describe-stacks --region ${REGION} --stack-name civiform | jq -r '.Stacks[0].Outputs[] | select(.OutputKey == "ECSCluster") | .OutputValue')

aws ecs update-service --region=${REGION} --cluster "$ECSCLUSTER" --service "$ECSSERVICE" --force-new-deployment
